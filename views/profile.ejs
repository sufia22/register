<div class="profile-body">
  <div class="profile-wraper">
    <div class="profile-info">
      <%- include ('layouts/info.ejs') %>
      <hr />
      <%- include ('layouts/menu.ejs') %>
    </div>
    <div class="profile-box">
      <div class="profile-details">
        <div class="profile-photo">
          <% if (user.photo) { %>
          <img
            class="profile-preview"
            src="./media/user/<%= user.photo %>"
            alt=""
          />
          <% } else { %>
          <img class="profile-preview" src="./images/avatar.png" alt="" />
          <% } %>
          <div class="user-info">
            <h2><%= user.name %></h2>
            <p><%= user.email %></p>
            <p class="follow">
              <%= user.follower.length %> followers . <%= user.following.length
              %> following
            </p>
          </div>
        </div>
        <hr />
      </div>
      <div class="detail-info">
        <div class="tab">
          <button class="tablinks" onclick="openCity(event, 'London')">
            Gallery
          </button>
          <button class="tablinks" onclick="openCity(event, 'Paris')">
            <a href="/followers/<%= user._id %>">Follower</a>
          </button>
          <button class="tablinks" onclick="openCity(event, 'Tokyo')">
            <a href="/following/<%= user._id %>">Following</a>
          </button>
        </div>

        <div id="London" class="tabcontent">
          <div class="user-gallery">
            <div class="gallery-area">
              <% user.gallery.forEach(gall => { %>
              <div class="gallery-item">
                <img src="./media/gallery/<%= gall %>" alt="" />
              </div>
              <% }) %>
            </div>
          </div>
        </div>

        <div id="Paris" class="tabcontent"></div>

        <div id="Tokyo" class="tabcontent"></div>
      </div>
    </div>
  </div>
</div>
