<div class="profile-body">
  <div class="profile-wraper">
    <div class="profile-info">
      <%- include ('layouts/info.ejs') %>
      <hr />
      <%- include ('layouts/menu.ejs') %>
    </div>
    <div class="profile-box">
      <div class="box-content">
        <h2>Edit profile</h2>
        <% if (message) { %>
        <p><%= message %></p>
        <% } %>
        <hr />
        <div class="form-wraper">
          <form action="/update/<%= user._id %>" method="POST">
            <div class="form-group">
              <label for="">Name</label>
              <input name="name" value="<%= user.name %>" type="text" />
            </div>
            <div class="form-group">
              <label for="">Email</label>
              <input name="email" value="<%= user.email %>" type="text" />
            </div>
            <div class="form-group">
              <label for="">Username</label>
              <input name="username" value="<%= user.username %>" type="text" />
            </div>
            <div class="form-group">
              <label for="">Phone</label>
              <input name="phone" value="<%= user.phone %>" type="text" />
            </div>
            <div class="form-group">
              <label for="">Age</label>
              <input name="age" value="<%= user.age %>" type="number" />
            </div>
            <div class="form-group">
              <label for="">Skill</label>
              <input name="skill" value="<%= user.skill %>" type="text" />
            </div>
            <div class="form-group">
              <label for="">Location</label>
              <select name="location" value="<%= user.location %>" id="">
                <option value="Mirpur">Mirpur</option>
                <option value="Gulshan">Gulshan</option>
                <option value="Badda">Badda</option>
                <option value="Uttara">Uttara</option>
              </select>
            </div>
            <div class="form-group">
              <button type="submit">Update</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
